{
  "private": true,
  "scripts": {
    "build": "poi --prod",
    "dev": "poi --serve",
    "commit": "git-cz"
  },
  "devDependencies": {
    "@babel/polyfill": "^7.2.5",
    "@commitlint/cli": "^7.5.2",
    "@commitlint/config-conventional": "^7.5.0",
    "@poi/plugin-eslint": "^12.0.0",
    "@poi/plugin-pwa": "^12.0.3",
    "commitizen": "^3.0.7",
    "cz-conventional-changelog": "^2.1.0",
    "disable-react-devtools": "^1.0.0",
    "eslint-config-prettier": "^4.1.0",
    "husky": "^1.3.1",
    "lint-staged": "^8.1.5",
    "poi": "^12.5.5",
    "prettier": "^1.16.4",
    "react-scripts": "^2.1.5",
    "register-service-worker": "^1.6.2"
  },
  "dependencies": {
    "@hot-loader/react-dom": "^16.8.3",
    "react": "^16.8.4",
    "react-hot-loader": "^4.7.2"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,html,htm,vue,css,less,scss,sass,md,mdx,yaml,yml}": [
      "prettier --write",
      "git add"
    ]
  }
}
